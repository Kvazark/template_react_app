{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"shared/*": [
				"src/shared/*"
			],
			"app/*": [
				"src/app/*"
			],
			"pages/*": [
				"src/pages/*"
			],
			"widgets/*": [
				"src/widgets/*"
			],
			"features/*": [
				"src/features/*"
			],
			"entities/*": [
				"src/entities/*"
			]
		},
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"importHelpers": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	},
	"outDir": "./dist/",
	"include": [
		"src/**/*",
		"configs"
	],
	"exclude": [
		"dist",
		"node_modules"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}

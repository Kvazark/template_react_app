{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2023",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"importHelpers ": true,
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
	},
	"outDir": "./dist/",
	"include": ["src/**/*"],
	"exclude": [ "dist", "node_modules" ]
}

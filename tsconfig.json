{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2023",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"importHelpers ": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
	},
	"exclude": [ "dist", "node_modules" ]
}
